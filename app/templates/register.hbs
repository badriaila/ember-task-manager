{{page-title "Register"}}
{{!-- {{outlet}} --}}

    <div class="register__container">
        <h2 class="register__title">Register</h2>
        <form class="register__form" {{on "submit" this.register}}>
                
            <label for="username">Username<sup class="required">*</sup></label>
            <input type="text" id="username" required {{on "change" this.updateUsername}}>
            {{#if this.usernameError}}
                <span class="error">{{this.usernameError}}</span>
            {{/if}}

            <label for="email">Email<sup class="required">*</sup></label>
            <input type="email" id="email" required {{on "change" this.updateEmail}}>
            {{#if this.emailError}}
                <span class="error">{{this.emailError}}</span>
            {{/if}}
        
            <label for="password">Password<sup class="required">*</sup></label>
            <input type="password" id="password" required {{on "change" this.updatePassword}}>
            {{#if this.passwordError}}
                <span class="error">{{this.passwordError}}</span>
            {{/if}}
            
            <div class="register__button">
                <button type="submit" class="btn btn--primary">Register</button>
            </div>

            <div class="register__footer">
                <LinkTo @route="login">Already have an account? Login</LinkTo>
            </div>

        </form>
    </div>

