


<form {{on "submit" @onSubmit}}>
    <label>Title: </label>
    <input type="text" value={{@title}} {{on "change" @onTitleChange}} />
    {{#if @titleError}}
        <span class="error">{{@titleError}}</span>
    {{/if}}
    <br><br>

    <label>Description:
        <textarea {{on "change" @onDescriptionChange}}>{{@description}}</textarea>
    </label>
    {{#if @descriptionError}}
        <span class="error">{{@descriptionError}}</span>
    {{/if}}
    <br><br>

    <label>Status:
        <select value={{@status}} {{on "change" @onStatusChange}}>
            <option value="todo">Pending</option>
            <option value="in-progress">In Progress</option>
            <option value="done">Done</option>
        </select>
    </label>
    <br><br>

    <button type="submit">{{@submitLabel}}</button>
    {{yield}}
</form>